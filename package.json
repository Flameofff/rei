{
  "name": "root",
  "contributors": [
    "David Lan <lanhaoxiang@qq.com> (https://github.com/lanhaoxiang/)",
    "Samlior <samlior@foxmail.com> (https://github.com/samlior/)"
  ],
  "version": "0.0.0",
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-angular": "^11.0.0",
    "@typescript-eslint/parser": "^4.8.1",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.1",
    "prettier": "^2.2.0"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --ignore-scripts --include-dependencies --no-ci --hoist && npm run build",
    "build": "lerna run build --stream",
    "build:block": "npm run build -- --scope @gxchain2/block",
    "build:blockchain": "npm run build -- --scope @gxchain2/blockchain",
    "build:cli": "npm run build -- --scope @gxchain2/cli",
    "build:common": "npm run build -- --scope @gxchain2/common",
    "build:core": "npm run build -- --scope @gxchain2/core",
    "build:crypto": "npm run build -- --scope @gxchain2/crypto",
    "build:database": "npm run build -- --scope @gxchain2/database",
    "build:network": "npm run build -- --scope @gxchain2/network",
    "build:receipt": "npm run build -- --scope @gxchain2/receipt",
    "build:rpc": "npm run build -- --scope @gxchain2/rpc",
    "build:state-manager": "npm run build -- --scope @gxchain2/state-manager",
    "build:tx": "npm run build -- --scope @gxchain2/tx",
    "build:tx-pool": "npm run build -- --scope @gxchain2/tx-pool",
    "build:utils": "npm run build -- --scope @gxchain2/utils",
    "build:vm": "npm run build -- --scope @gxchain2/vm",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/dist packages/*/package-lock.json",
    "clean:build": "rm -rf packages/*/dist",
    "test:prompts": "node -r ts-node/register ./packages/gxchain-cli/test/prompts.ts",
    "postinstall": "npm run bootstrap",
    "lint": "eslint packages/*/src/**.ts packages/*/test/**.ts --format=codeframe",
    "lint:fix": "eslint packages/*/src/**.ts packages/*/test/**.ts --fix",
    "publish:preview": "lerna version --conventional-commits --no-git-tag-version -y",
    "publish:prepatch": "lerna publish prepatch --no-git-tag-version --no-push",
    "publish:main": "lerna publish --no-git-tag-version --no-push",
    "release": "lerna version --conventional-commits",
    "release:prepatch": "lerna version prepatch --conventional-commits",
    "cli": "node -r ts-node/register ./packages/gxchain-cli/src/index.ts"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --format=codeframe"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  }
}
